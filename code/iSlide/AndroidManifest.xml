<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.csun.comp380.group2.islide"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.csun.comp380.group2.islide.StartPage"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.csun.comp380.group2.islide.engine.PlayGameActivity"
            android:label="@string/title_activity_play_game"
            android:parentActivityName="org.andengine.ui.activity.SimpleBaseGameActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.andengine.ui.activity.SimpleBaseGameActivity" />
        </activity>
    </application>

</manifest>
